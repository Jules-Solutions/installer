<!-- Jules.Solutions Dark Theme -->
<!-- Used by Install-GUI.ps1 -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <Color x:Key="PrimaryColorValue">#e94560</Color>
    <Color x:Key="SecondaryColorValue">#0f3460</Color>
    <Color x:Key="BackgroundColorValue">#1a1a2e</Color>
    <Color x:Key="SurfaceColorValue">#252542</Color>
    <Color x:Key="TextColorValue">#eaeaea</Color>
    <Color x:Key="SubTextColorValue">#a0a0a0</Color>
    <Color x:Key="SuccessColorValue">#4ade80</Color>
    <Color x:Key="ErrorColorValue">#ef4444</Color>
    <Color x:Key="WarningColorValue">#f59e0b</Color>
    
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource PrimaryColorValue}"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="{StaticResource SecondaryColorValue}"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource BackgroundColorValue}"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="{StaticResource SurfaceColorValue}"/>
    <SolidColorBrush x:Key="TextColor" Color="{StaticResource TextColorValue}"/>
    <SolidColorBrush x:Key="SubTextColor" Color="{StaticResource SubTextColorValue}"/>
    <SolidColorBrush x:Key="SuccessColor" Color="{StaticResource SuccessColorValue}"/>
    <SolidColorBrush x:Key="ErrorColor" Color="{StaticResource ErrorColorValue}"/>
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource WarningColorValue}"/>
    
</ResourceDictionary>
